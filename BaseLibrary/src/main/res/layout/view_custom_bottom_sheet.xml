<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ui_top_sheet_bg"
    android:elevation="@dimen/ui_offset_2"
    android:orientation="vertical"
    android:paddingLeft="@dimen/ui_offset_24"
    android:paddingTop="@dimen/ui_offset_24"
    android:paddingRight="@dimen/ui_offset_24">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="每日阅读福利"
        android:textColor="@color/ui_dark_config_color_text_important"
        android:textSize="@dimen/ui_font_size_18"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_offset_24"
        android:textColor="@color/ui_dark_config_color_text_important"
        android:textSize="@dimen/ui_font_size_16"
        tools:text="再阅读5分钟可得200金币" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ui_list_item_bg_with_border_bottom">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/ui_offset_16"
        android:paddingBottom="@dimen/ui_offset_16"
        android:textColor="@color/ui_dark_config_color_text_important"
        android:textSize="@dimen/ui_font_size_18"
        android:text="关闭" />
</LinearLayout>
