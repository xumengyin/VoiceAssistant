<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_config_color_white">


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_loading"
            android:layout_width="@dimen/ui_offset_72"
            android:layout_height="@dimen/ui_offset_72" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_offset_16"
            android:text="加载中"
            android:textColor="@color/ui_dark_config_color_text_important"
            android:textSize="@dimen/ui_font_size_14"></TextView>

    </LinearLayout>

</RelativeLayout>
