<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll"
    android:layout_width="48dp"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="34dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_sign_warn"
            android:gravity="center"
            android:paddingLeft="@dimen/ui_offset_2"
            android:paddingTop="@dimen/ui_offset_2"
            android:paddingRight="@dimen/ui_offset_2"
            android:paddingBottom="@dimen/ui_offset_2"
            android:textColor="@color/ui_config_color_white"
            android:textSize="@dimen/ui_font_size_10"
            tools:text="神秘礼盒"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_offset_4">

            <TextView
                android:id="@+id/tv_gold"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_sign_gold_sign"
                android:gravity="center"
                android:textColor="@color/ui_config_color_white"
                android:textSize="@dimen/ui_offset_12"
                tools:text="23"></TextView>

        </RelativeLayout>


        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_offset_4"
            android:textSize="@dimen/ui_font_size_10"
            tools:text="已领"></TextView>
    </LinearLayout>

</LinearLayout>

