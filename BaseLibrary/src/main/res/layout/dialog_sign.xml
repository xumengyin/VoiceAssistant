<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="296dp"
        android:layout_marginLeft="@dimen/ui_offset_4"
        android:layout_marginRight="@dimen/ui_offset_4"
        android:background="@drawable/ic_sign_dialog"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ImageView
            android:layout_gravity="right"
            android:id="@+id/img_delete"
            android:layout_width="@dimen/ui_offset_24"
            android:layout_height="@dimen/ui_offset_24"
            android:layout_marginRight="@dimen/ui_offset_24"
            android:src="@drawable/ic_sign_cancel"></ImageView>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:textColor="#A33600"
            android:textSize="@dimen/ui_font_size_20"
            tools:text="已连续签到2天，恭喜获得20金币"></TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp">


            <View
                android:layout_centerHorizontal="true"
                android:id="@+id/view_s"
                android:layout_width="288dp"
                android:layout_height="@dimen/ui_offset_6"
                android:layout_marginTop="38dp"
                android:background="#FCDEAF"></View>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_centerHorizontal="true"
                android:id="@+id/rv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>


        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_offset_24"
        android:src="@drawable/ic_sign_double"></ImageView>
</LinearLayout>
