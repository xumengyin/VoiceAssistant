<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_radius_white"
    android:minWidth="310dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_offset_20"
        android:text="开启位置信息"
        android:textColor="@color/ui_dark_config_color_text_important"
        android:textSize="@dimen/sp_14">


    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_offset_12"
        android:gravity="center"
        android:text="为精准获取步数信息,我们需要您开启\n位置信息"
        android:textColor="@color/ui_dark_config_color_text_important"
        android:textSize="@dimen/sp_12" />


    <ImageView
        android:layout_width="145dp"
        android:layout_height="156dp"
        android:layout_marginTop="@dimen/ui_offset_12"
        android:src="@drawable/open_loc" />


    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/openLoc"
        android:layout_width="180dp"
        android:layout_marginTop="@dimen/ui_offset_20"
        android:layout_marginBottom="@dimen/ui_offset_20"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:textColor="@color/ui_config_color_white"
        app:qmui_backgroundColor="@color/ui_config_color_main"
        app:qmui_borderColor="@color/ui_config_color_main"
        app:qmui_radius="@dimen/ui_offset_16"
        android:textSize="@dimen/sp_16"
        android:text="我知道了" />
</LinearLayout>
