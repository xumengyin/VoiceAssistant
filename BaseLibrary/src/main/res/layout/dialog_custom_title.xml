<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_big_dialog_bg"
    android:elevation="@dimen/ui_offset_2"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_sub_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ui_offset_32"
        android:layout_marginTop="@dimen/ui_offset_16"
        android:layout_marginRight="@dimen/ui_offset_32"
        android:layout_marginBottom="@dimen/ui_offset_16"
        android:gravity="center_horizontal"
        android:textSize="@dimen/ui_font_size_18" />

    <com.qmuiteam.qmui.widget.QMUIWrapContentScrollView
        android:id="@+id/ui_con"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/ui_offset_12">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_offset_32"
            android:layout_marginTop="@dimen/ui_offset_16"
            android:layout_marginRight="@dimen/ui_offset_32"
            android:layout_marginBottom="@dimen/ui_offset_16"
            android:gravity="center_horizontal"
            android:textSize="@dimen/ui_font_size_18" />


    </com.qmuiteam.qmui.widget.QMUIWrapContentScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_offset_1_px"
        android:background="@color/ui_config_color_line"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_offset_44"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_big_dialog_left_button"
            android:text="取消"
            android:textSize="@dimen/ui_font_size_16" />


        <View
            android:layout_width="@dimen/ui_offset_1_px"
            android:layout_height="match_parent"
            android:background="@color/ui_config_color_line"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ui_big_dialog_right_button"
            android:text="确定"
            android:textColor="@color/ui_config_color_main"
            android:textSize="@dimen/ui_font_size_16" />
    </LinearLayout>
</LinearLayout>
