<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_radius_white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/dp_14"
        android:text="申明与条款"
        android:textColor="@color/black_40"
        android:textSize="@dimen/sp_18" />

    <TextView
        android:id="@+id/privacy1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:text="@string/privacy_tip"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_14" />
    <TextView
        android:id="@+id/privacy2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_6"
        android:paddingRight="@dimen/dp_14"
        android:text="@string/privacy_tip2"
        android:textColor="@color/color_999"
        android:textSize="@dimen/sp_14" />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:text="取消"
            android:background="@drawable/ui_big_dialog_left_button"
            android:textSize="@dimen/sp_16" />
        <Button
            android:id="@+id/sure"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_14"
            android:text="确定"
            android:background="@drawable/ui_big_dialog_right_button"
            android:textColor="@color/ui_config_color_main"
            android:textSize="@dimen/sp_16" />

    </LinearLayout>



</LinearLayout>